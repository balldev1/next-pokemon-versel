{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",  // สำหรับไฟล์ next-env.d.ts ที่จำเป็นสำหรับ Next.js
    "**/*.ts",        // รวมไฟล์ .ts
    "**/*.tsx",       // รวมไฟล์ .tsx
    ".next/types/**/*.ts"  // รวมไฟล์ types ของ Next.js
  ],
  "exclude": [
    "node_modules"    // ยกเว้น node_modules
  ]
}
